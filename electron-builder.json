{
    "directories": {
        "buildResources": "build-res",
        "output": "out"
    },
    "mac": {
        "target": {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
    },
    "linux": {
        "target": {
            "target": [
                "deb",
                "rpm",
                "pacman"
            ]
        }
    },
    "win": {
        "target": "nsis",
        "arch": [
            "x64",
            "ia32",
            "arm64"
        ]
    },
    "nsis": {
        "oneClick": "false",
        "perMachine": "false",
        "allowToChangeInstallationDirectory": "true"
    }
}